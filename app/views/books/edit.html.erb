<% if @book.errors.any? %>
  error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="text-center pt-3 ">
  <h1>Editing Book</h1>
  <%= form_with model: @book do |f| %>
    <div class = "pt-3">
      <label for="inputTitle">Title</label>
      <div>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
      </div>
    </div>
    <div class ="pt-3">
      <label for="inputBody">Opinion</label>
      <div>
        <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion"%>
      </div>
    </div>
    <div class="col-12 mt-3">
    <%= f.submit "Update Book", class:'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="text-center pt-3 ">
  <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
</div>


