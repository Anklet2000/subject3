
<h1>User info</h1>
  <p><%= image_tag current_user.get_profile_image(100,100) %></p>
  <p>name: <%= current_user.name %></p>
  <p>introduction: <%= current_user.introduction %></p>
  <%= link_to edit_user_path(current_user) do %>
    <button type="button" class="btn btn-outline-secondary w-75">
      <i class="fas fa-user-cog"></i>
    </button>
  <% end %>

<%= form_with model: book do |f| %>
<div class="row mt-4">
  <div class="col-12">
    <h1>New book</h1>
  </div>
  <div class="col-12">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="col-12">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <div class="col-12 mt-3">
    <%= f.submit "Create Book", class:'btn btn-success' %>
  </div>
</div>
<% end %>