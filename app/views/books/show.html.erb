<% if @book.errors.any? %>
  error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
    


<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h1>User info</h1>
      <p><%= image_tag @user.get_profile_image(100,100) %></p>
      <p>name: <%= @user.name %></p>
      <p>introduction: <%= @user.introduction %></p>
      <%= link_to edit_user_path(@user) do %>
        <button type="button" class="btn btn-outline-secondary w-75">
          <i class="fas fa-user-cog"></i>
        </button>
      <% end %>

  <%= form_with model: @book do |f| %>
    <div class="row mt-4">
    <div class="col-12">
      <h1>New book</h1>
    </div>
    <div class="col-12">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="col-12">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
    <div class="col-12 mt-3">
      <%= f.submit "Create Book", class:'btn btn-success' %>
    </div>
    </div>
  <% end %>
</div>

     <div class="col-md-8 offset-md-1">
      <h1 class="mb-0">Book detail</h1>
      <hr class="mt-0">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@book1.user) do %>
            <%= image_tag @book1.user.get_profile_image(100,100) %>
            <%= @book1.user.name %>
          <% end %>
        </div>
        <div class="col-2">
          <%= link_to book_path(@book1) do %>
          <%= @book1.title %>
          <% end %>
        </div>
        <div class="col">
          <%= @book1.body %>
        </div>
        <% if @book1.user == current_user %>
          <div class="col-1">
            <%= link_to edit_book_path(@book1) do %>
              <button type="button" class="btn btn-success">
                Edit
              </button>
            <% end %>
          </div>
          <div class="col-1 ml-5">
            <%= link_to book_path(@book1), method: :delete, data: { confirm: "本当に消しますか？" } do %>
              <button type="button" class="btn btn-danger">
                Destroy
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




   



