<% if @book.errors.any? %>
  error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <%=render 'books/usernewbook', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col-3">image</th>
            <th scope="col-2">name</th>
            <th scope="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= image_tag user.get_profile_image(100,100) %></th>
            <td><%= user.name %></td>
            <td>
              <%= link_to user_path(user.id) do %>
              Show
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
    
