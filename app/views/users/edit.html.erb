<% if @user.errors.any? %>
      error
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

<div class="text-center pt-3 ">
  <h1>User info</h1>
  <%= form_with model: @user do |f| %>
    <div class = "pt-3">
      <label for="inputName">Name</label>
      <div>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
      </div>
    </div>
    <div class = "pt-3">
      <label for="inputImage">ProfileImage</label>
      <div>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
      </div>
    </div>
    <div class = "pt-3">
      <label for="inputIntroduction">Introduction</label>
      <div>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
      </div>
    </div>
    <div class="col-12 mt-3">
    <%= f.submit "Update User", class:'btn btn-success' %>
    </div>
  <% end %>
</div>