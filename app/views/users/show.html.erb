<% if @book.errors.any? %>
  error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
      </ul>
<% end %>
    

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h1>User info</h1>
      <p><%= image_tag @user.get_profile_image(100,100) %></p>
      <p>name: <%= @user.name %></p>
      <p>introduction: <%= @user.introduction %></p>
      <%= link_to edit_user_path(@user) do %>
        <button type="button" class="btn btn-outline-secondary w-75">
          <i class="fas fa-user-cog"></i>
        </button>
      <% end %>

  <%= form_with model: @book do |f| %>
    <div class="row mt-4">
    <div class="col-12">
      <h1>New book</h1>
    </div>
    <div class="col-12">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="col-12">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
    <div class="col-12 mt-3">
      <%= f.submit "Create Book", class:'btn btn-success' %>
    </div>
    </div>
  <% end %>
  </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col-3"></th>
            <th scope="col-6">Title</th>
            <th scope="col-3">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th scope="row">
              <%= link_to user_path(@user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </th>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
    
    
    
    
    



